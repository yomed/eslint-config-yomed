{
    "parserOptions": {
        "ecmaVersion": 6
    },
    "env": {
        "browser": true,
        "es6": true,
        "jquery": true,
        "mocha": true,
        "node": true
    },
    "rules": {
        "no-bitwise": 2,
        "camelcase": [2, {"properties": "always"}],
        "curly": [2, "all"],
        "eqeqeq": 2,
        "guard-for-in": 2,
        "no-extend-native": 2,
        "wrap-iife": [2, "any"],
        "indent": [2, 4, {"SwitchCase": 1}],
        "no-use-before-define": [1, "nofunc"],
        "new-cap": 0,
        "no-caller": 2,
        "no-empty": 2,
        "no-irregular-whitespace": 2,
        "quotes": [2, "single"],
        "no-undef": 2,
        "no-unused-vars": 2,
        "strict": [0, "safe"],
        "semi": [2, "always"],
        "no-cond-assign": [2, "always"],
        "no-eval": 2,
        "no-unused-expressions": 2,
        "linebreak-style": [2, "unix"],
        "comma-style": 2,
        "no-loop-func": 2,
        "require-yield": 2,
        "valid-typeof": 2,
        "no-proto": 2,
        "no-script-url": 2,
        "no-shadow": 1,
        "dot-notation": 2,
        "no-new-func": 2,
        "no-new-wrappers": 2,
        "no-invalid-this": 0,
        "keyword-spacing": 2,
        "space-before-function-paren": [2, {"anonymous": "always", "named": "never"}],
        "no-spaced-func": 2,
        "operator-linebreak": 2,
        "space-unary-ops": 2,
        "space-infix-ops": 2,
        "space-before-blocks": [2, "always"],
        "no-with": 2,
        "no-multiple-empty-lines": 2,
        "quote-props": [2, "as-needed"],
        "no-mixed-spaces-and-tabs": 2,
        "no-trailing-spaces": 2,
        "comma-dangle": [2, "never"],
        "one-var": [2, "never"],
        "no-multi-spaces": 2,
        "space-in-parens": [2, "never"],
        "key-spacing": 2,
        "semi-spacing": 2,
        "eol-last": 2,
        "consistent-this": [1, "that"],
        "valid-jsdoc": 2
    }
}
